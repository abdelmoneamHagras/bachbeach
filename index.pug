            .container
                .row
                    .col-1
                    -
                        let x = [
                            ['rgb(242, 114, 87)','rgb(93, 160, 170)'],
                            ['rgb(93, 160, 170)','rgb(34, 58, 71)'],
                            ['rgb(34, 58, 71)','rgb(242, 114, 87)'],
