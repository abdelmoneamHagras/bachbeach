                              button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarsExample08", aria-controls="navbarsExample08", aria-expanded="false", aria-label="Toggle navigation")
                                span.navbar-toggler-icon
                              .collapse.navbar-collapse.justify-content-md-center#navbarsExample08
                                ul.navbar-nav
                                    li.nav-item.mr-3
                                        a.nav-link.active( href="#" class="hvr-pop") HOME
                                    -let menuBtn = ['DINING','LUNCH','FUNCTIONS','BREAKFAST','WHAT\'S ON','RESERVATION','ABOUT','CONTACT']
                                    -let menuActive = ''
                                    each val,index in menuBtn
                                        -if (index == 0){menuActive = 'active'}else{menuActive = ''}
                                        li.nav-item(class=menuActive).mr-3
                                            a.co-nav.nav-link(href="#" class="hvr-bounce-in")=val
